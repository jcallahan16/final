<div class="page-header">
  <h1>Add a New Brand</h1>
</div>

<div class="row">
  <div class="col-md-5">

    <%= form_tag "/brand", "method" => "post"  %>

      <div class="form-group">
        <%= label_tag "name", "Name of Brand:" %>
        <%= text_field_tag "name", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "logo_url", "URL for Brand Logo:" %>
        <%= text_field_tag "logo_url", "", "class" => "form-control" %>
      </div>


      <%= submit_tag "Add This Brand", "class" => "btn btn-md btn-success" %> or <%= link_to "Cancel", "/brand" %>

    </form>
</div>
</div>